<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_sub_header_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <EditText
            android:id="@+id/edit_playlist_search_bar"
            android:layout_width="282dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/search_icon"
            android:hint="Search songs" />

        <ImageButton
            android:id="@+id/edit_playlist_trash_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@id/edit_playlist_add_song"
            android:backgroundTint="@color/main_btn_color"
            android:src="@drawable/trash_can" />

        <ImageButton
            android:id="@+id/edit_playlist_add_song"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:backgroundTint="@color/main_btn_color"
            android:src="@drawable/add_cross"
            android:onClick="add_playList_btnClick"/>

    </RelativeLayout>



</RelativeLayout>